enp4s0
192.168.1.171/24
#Let NetworkManager manage all devices on this system
network:
  ethernets:
    enp4s0:
      addresses:
      - 172.16.17.10/24
      gateway4: 172.16.17.254
      nameservers:
        addresses:
        - 127.0.0.2
        search:
        - templab.lan
  version: 2

  ######################################
  network:
    version: 2
    ethernets:
        ens18:
            addresses:
            - 172.16.17.10/24
            - gateway4: 172.16.17.254
            nameservers:
              addresses:
              - 127.0.0.2
              search:
              - templab.lan
